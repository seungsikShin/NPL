            }
        });

        // ì‚¬ë²ˆ ìœ íš¨ì„± ê²€ì‚¬
        function validateEmployeeId(id) {
            const regex = /^[A-Z][0-9]{7}$/;
            return regex.test(id);
        }

        // íšŒì›ê°€ì… í•¨ìˆ˜
        window.signup = async function() {
            const id = document.getElementById('signupId').value.trim();
            const name = document.getElementById('signupName').value.trim();
            const email = document.getElementById('signupEmail').value.trim();
            const password = document.getElementById('signupPassword').value;
            const passwordConfirm = document.getElementById('signupPasswordConfirm').value;

            // ìœ íš¨ì„± ê²€ì‚¬
            if (!validateEmployeeId(id)) {
                showAlert('signupError', 'ì‚¬ë²ˆì€ ëŒ€ë¬¸ì 1ìì™€ ìˆ«ì 7ìë¡œ êµ¬ì„±ë˜ì–´ì•¼ í•©ë‹ˆë‹¤. (ì˜ˆ: A1234567)');
                return;
            }

            if (!name || !email || !password) {
                showAlert('signupError', 'ëª¨ë“  í•„ë“œë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                return;
            }

            if (password !== passwordConfirm) {
                showAlert('signupError', 'ë¹„ë°€ë²ˆí˜¸ê°€ ì¼ì¹˜í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.');
                return;
            }

            if (password.length < 6) {
                showAlert('signupError', 'ë¹„ë°€ë²ˆí˜¸ëŠ” ìµœì†Œ 6ì ì´ìƒì´ì–´ì•¼ í•©ë‹ˆë‹¤.');
                return;
            }

            try {
                // ì‚¬ë²ˆ ì¤‘ë³µ ì²´í¬
                const employeeRef = ref(database, `employees/${id}`);
                const snapshot = await get(employeeRef);
                if (snapshot.exists()) {
                    showAlert('signupError', 'ì´ë¯¸ ë“±ë¡ëœ ì‚¬ë²ˆì…ë‹ˆë‹¤.');
                    return;
                }

                // Firebase Authë¡œ ê³„ì • ìƒì„±
                const userCredential = await createUserWithEmailAndPassword(auth, email, password);
                const user = userCredential.user;

                // ì‚¬ìš©ì ì •ë³´ ë°ì´í„°ë² ì´ìŠ¤ì— ì €ì¥
                await set(ref(database, `employees/${id}`), {
                    uid: user.uid,
                    name: name,
                    email: email,
                    employeeId: id,
                    registeredAt: new Date().toISOString(),
                    isAdmin: false,
                    performance: {}
                });

                showAlert('signupSuccess', 'íšŒì›ê°€ì…ì´ ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤!');
                setTimeout(() => {
                    showLogin();
                }, 2000);

            } catch (error) {
                showAlert('signupError', 'íšŒì›ê°€ì… ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤: ' + error.message);
            }
        };

        // ë¡œê·¸ì¸ í•¨ìˆ˜
        window.login = async function() {
            const id = document.getElementById('loginId').value.trim();
            const password = document.getElementById('loginPassword').value;

            if (!validateEmployeeId(id)) {
                showAlert('loginError', 'ì˜¬ë°”ë¥¸ ì‚¬ë²ˆ í˜•ì‹ì„ ì…ë ¥í•´ì£¼ì„¸ìš”. (ì˜ˆ: A1234567)');
                return;
            }

            if (!password) {
                showAlert('loginError', 'ë¹„ë°€ë²ˆí˜¸ë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                return;
            }

            try {
                // ì‚¬ë²ˆìœ¼ë¡œ ì´ë©”ì¼ ì°¾ê¸°
                const employeeRef = ref(database, `employees/${id}`);
                const snapshot = await get(employeeRef);
                
                if (!snapshot.exists()) {
                    showAlert('loginError', 'ë“±ë¡ë˜ì§€ ì•Šì€ ì‚¬ë²ˆì…ë‹ˆë‹¤.');
                    return;
                }

                const userData = snapshot.val();
                
                // Firebase Authë¡œ ë¡œê·¸ì¸
                await signInWithEmailAndPassword(auth, userData.email, password);
                
            } catch (error) {
                showAlert('loginError', 'ë¡œê·¸ì¸ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤: ' + error.message);
            }
        };

        // ì‚¬ìš©ì ë°ì´í„° ë¡œë“œ
        async function loadUserData(uid) {
            try {
                // ëª¨ë“  ì§ì› ë°ì´í„°ì—ì„œ í•´ë‹¹ UID ì°¾ê¸°
                const employeesRef = ref(database, 'employees');
                const snapshot = await get(employeesRef);
                
                if (snapshot.exists()) {
                    const employees = snapshot.val();
                    for (const [employeeId, data] of Object.entries(employees)) {
                        if (data.uid === uid) {
                            window.currentUser = {
                                ...data,
                                employeeId: employeeId
                            };
                            break;
                        }
                    }
                }

                if (window.currentUser) {
                    showDashboardSection();
                    updateUserInterface();
                } else {
                    showAlert('loginError', 'ì‚¬ìš©ì ì •ë³´ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.');
                    logout();
                }
            } catch (error) {
                console.error('ì‚¬ìš©ì ë°ì´í„° ë¡œë“œ ì‹¤íŒ¨:', error);
                logout();
            }
        }

        // ì‚¬ìš©ì ì¸í„°í˜ì´ìŠ¤ ì—…ë°ì´íŠ¸
        function updateUserInterface() {
            document.getElementById('userName').textContent = window.currentUser.name;
            document.getElementById('userAvatar').textContent = window.currentUser.employeeId.charAt(0);
            
            // ê´€ë¦¬ì ë©”ë‰´ í‘œì‹œ
            if (window.currentUser.isAdmin) {
                document.getElementById('adminNavItem').style.display = 'block';
                document.getElementById('userRole').textContent = 'ê´€ë¦¬ì';
            }

            // í˜„ì¬ ì›” ì‹¤ì  í‘œì‹œ
            updateDashboardStats();
            
            // ë‹¬ë ¥ ì´ˆê¸°í™”
            updateCalendar();

            // ë„¤ë¹„ê²Œì´ì…˜ í™œì„±í™”
            setActiveNav('dashboard');
        }

        // ëŒ€ì‹œë³´ë“œ í†µê³„ ì—…ë°ì´íŠ¸
        function updateDashboardStats() {
            const performance = window.currentUser.performance || {};
            const currentMonthKey = `${window.currentYear}-${String(window.currentMonth + 1).padStart(2, '0')}`;
            const lastMonthKey = `${window.currentYear}-${String(window.currentMonth).padStart(2, '0') || '12'}`;
            
            const currentPerformance = performance[currentMonthKey] || 0;
            const lastPerformance = performance[lastMonthKey] || 0;
            
            // í˜„ì¬ ì‹¤ì 
            document.getElementById('currentPerformance').textContent = currentPerformance.toLocaleString();
            
            // ë³€í™”ìœ¨ ê³„ì‚°
            if (lastPerformance > 0) {
                const changeRate = ((currentPerformance - lastPerformance) / lastPerformance * 100).toFixed(1);
                const changeElement = document.getElementById('performanceChange');
                changeElement.textContent = `${changeRate >= 0 ? '+' : ''}${changeRate}%`;
                changeElement.className = `stat-change ${changeRate >= 0 ? '' : 'negative'}`;
            }

            // í‰ê·  ì‹¤ì  (ìµœê·¼ 3ê°œì›”)
            const recentMonths = [];
            for (let i = 0; i < 3; i++) {
                const monthDate = new Date(window.currentYear, window.currentMonth - i, 1);
                const monthKey = `${monthDate.getFullYear()}-${String(monthDate.getMonth() + 1).padStart(2, '0')}`;
                const monthPerformance = performance[monthKey] || 0;
                if (monthPerformance > 0) recentMonths.push(monthPerformance);
            }
            
            const avgPerformance = recentMonths.length > 0 
                ? Math.round(recentMonths.reduce((a, b) => a + b, 0) / recentMonths.length)
                : 0;
            document.getElementById('averagePerformance').textContent = avgPerformance.toLocaleString();

            // ëª©í‘œ ë‹¬ì„±ë¥  (ì„ì‹œë¡œ 100,000ì„ ëª©í‘œë¡œ ì„¤ì •)
            const target = 100000;
            const achievementRate = Math.round((currentPerformance / target) * 100);
            document.getElementById('achievementRate').textContent = achievementRate;
            
            const achievementElement = document.getElementById('achievementChange');
            if (achievementRate >= 100) {
                achievementElement.textContent = 'ëª©í‘œ ë‹¬ì„±!';
                achievementElement.className = 'stat-change';
            } else {
                achievementElement.textContent = `ëª©í‘œê¹Œì§€ ${(target - currentPerformance).toLocaleString()}`;
                achievementElement.className = 'stat-change';
            }
        }

        // ë‹¬ë ¥ ì—…ë°ì´íŠ¸
        window.updateCalendar = function() {
            const calendar = document.getElementById('calendar');
            const title = document.getElementById('calendarTitle');
            
            title.textContent = `${window.currentYear}ë…„ ${window.currentMonth + 1}ì›”`;
            
            // ë‹¬ë ¥ ì´ˆê¸°í™”
            calendar.innerHTML = '';
            
            // ìš”ì¼ í—¤ë”
            const weekdays = ['ì¼', 'ì›”', 'í™”', 'ìˆ˜', 'ëª©', 'ê¸ˆ', 'í† '];
            weekdays.forEach(day => {
                const dayElement = document.createElement('div');
                dayElement.className = 'calendar-day-header';
                dayElement.textContent = day;
                calendar.appendChild(dayElement);
            });

            // ë‹¬ë ¥ ë‚ ì§œ
            const firstDay = new Date(window.currentYear, window.currentMonth, 1);
            const lastDay = new Date(window.currentYear, window.currentMonth + 1, 0);
            const startDate = new Date(firstDay);
            startDate.setDate(startDate.getDate() - firstDay.getDay());

            for (let i = 0; i < 42; i++) {
                const cellDate = new Date(startDate);
                cellDate.setDate(startDate.getDate() + i);
                
                const dayElement = document.createElement('div');
                dayElement.className = 'calendar-day';
                dayElement.textContent = cellDate.getDate();
                
                if (cellDate.getMonth() !== window.currentMonth) {
                    dayElement.classList.add('other-month');
                } else {
                    dayElement.addEventListener('click', () => selectDate(cellDate, dayElement));
                }
                
                calendar.appendChild(dayElement);
            }
        };

        // ë‚ ì§œ ì„ íƒ
        window.selectDate = function(date, element) {
            // ì´ì „ ì„ íƒ ì œê±°
            document.querySelectorAll('.calendar-day.selected').forEach(el => {
                el.classList.remove('selected');
            });
            
            // ìƒˆ ì„ íƒ ì¶”ê°€
            element.classList.add('selected');
            window.selectedDate = date;
            
            document.getElementById('selectedDate').textContent = 
                `${date.getFullYear()}ë…„ ${date.getMonth() + 1}ì›” ${date.getDate()}ì¼`;
            document.getElementById('feedbackBtn').disabled = false;
        };

        // ì›” ë³€ê²½
        window.changeMonth = function(direction) {
            window.currentMonth += direction;
            if (window.currentMonth < 0) {
                window.currentMonth = 11;
                window.currentYear--;
            } else if (window.currentMonth > 11) {
                window.currentMonth = 0;
                window.currentYear++;
            }
            updateCalendar();
            updateDashboardStats();
        };

        // í”¼ë“œë°± ìš”ì²­
        window.requestFeedback = async function() {
            if (!window.selectedDate) return;

            const feedbackResult = document.getElementById('feedbackResult');
            const feedbackContent = document.getElementById('feedbackContent');
            
            feedbackResult.style.display = 'block';
            feedbackContent.innerHTML = '<div class="loading"><div class="spinner"></div><span>í”¼ë“œë°±ì„ ì²˜ë¦¬ ì¤‘ì…ë‹ˆë‹¤...</span></div>';

            try {
                // Make.com ì›¹í›… URL (ì‹¤ì œ URLë¡œ êµì²´ í•„ìš”)
                const webhookUrl = 'YOUR_MAKE_COM_WEBHOOK_URL_HERE';
                
                const payload = {
                    employeeId: window.currentUser.employeeId,
                    name: window.currentUser.name,
                    email: window.currentUser.email,
                    selectedDate: window.selectedDate.toISOString(),
                    currentMonth: `${window.currentYear}-${String(window.currentMonth + 1).padStart(2, '0')}`,
                    timestamp: new Date().toISOString()
                };

                const response = await fetch(webhookUrl, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(payload)
                });

                if (response.ok) {
                    const result = await response.json();
                    feedbackContent.innerHTML = `
                        <div style="color: #86efac; font-weight: 600; margin-bottom: 12px;">âœ… í”¼ë“œë°±ì´ ì„±ê³µì ìœ¼ë¡œ ì²˜ë¦¬ë˜ì—ˆìŠµë‹ˆë‹¤!</div>
                        <div style="margin-bottom: 8px;"><strong>ì„ íƒ ë‚ ì§œ:</strong> ${window.selectedDate.toLocaleDateString('ko-KR')}</div>
                        <div style="margin-bottom: 8px;"><strong>ì²˜ë¦¬ ì‹œê°„:</strong> ${new Date().toLocaleString('ko-KR')}</div>
                        <div style="color: #8b9299;">ê²°ê³¼ëŠ” ì´ë©”ì¼ë¡œë„ ë°œì†¡ë©ë‹ˆë‹¤.</div>
                        ${result.message ? `<div style="margin-top: 12px; padding: 12px; background: #0a0b0d; border-radius: 6px;">${result.message}</div>` : ''}
                    `;
                } else {
                    throw new Error('ì›¹í›… í˜¸ì¶œ ì‹¤íŒ¨');
                }
                
            } catch (error) {
                feedbackContent.innerHTML = `
                    <div style="color: #fca5a5; font-weight: 600; margin-bottom: 12px;">âŒ í”¼ë“œë°± ì²˜ë¦¬ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤</div>
                    <div style="margin-bottom: 8px;"><strong>ì˜¤ë¥˜ ë‚´ìš©:</strong> ${error.message}</div>
                    <div style="color: #8b9299;">ì ì‹œ í›„ ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.</div>
                `;
            }
        };

        // ê´€ë¦¬ì í˜ì´ì§€ í‘œì‹œ
        window.showAdmin = async function() {
            if (!window.currentUser.isAdmin) {
                alert('ê´€ë¦¬ì ê¶Œí•œì´ ì—†ìŠµë‹ˆë‹¤.');
                return;
            }

            try {
                const employeesRef = ref(database, 'employees');
                const snapshot = await get(employeesRef);
                
                if (snapshot.exists()) {
                    const employees = snapshot.val();
                    const tableBody = document.getElementById('adminTableBody');
                    tableBody.innerHTML = '';

                    Object.entries(employees).forEach(([employeeId, data]) => {
                        const currentMonth = `${new Date().getFullYear()}-${String(new Date().getMonth() + 1).padStart(2, '0')}`;
                        const lastMonth = `${new Date().getFullYear()}-${String(new Date().getMonth()).padStart(2, '0')}`;
                        
                        const currentPerformance = data.performance?.[currentMonth] || 0;
                        const lastPerformance = data.performance?.[lastMonth] || 0;

                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td><strong>${employeeId}</strong></td>
                            <td>${data.name}</td>
                            <td style="color: #8b9299;">${data.email}</td>
                            <td><strong>${currentPerformance.toLocaleString()}</strong></td>
                            <td>${lastPerformance.toLocaleString()}</td>
                            <td style="color: #8b9299;">${new Date(data.registeredAt).toLocaleDateString('ko-KR')}</td>
                        `;
                        tableBody.appendChild(row);
                    });
                }

                showContent('admin');
            } catch (error) {
                alert('ê´€ë¦¬ì ë°ì´í„° ë¡œë“œ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤: ' + error.message);
            }
        };

        // ë¡œê·¸ì•„ì›ƒ
        window.logout = async function() {
            try {
                await signOut(auth);
                window.currentUser = null;
                showAuthSection();
            } catch (error) {
                console.error('ë¡œê·¸ì•„ì›ƒ ì˜¤ë¥˜:', error);
            }
        };

        // í˜ì´ì§€ í‘œì‹œ í•¨ìˆ˜ë“¤
        window.showLogin = function() {
            document.getElementById('login-form').classList.remove('hidden');
            document.getElementById('signup-form').classList.add('hidden');
            clearAlerts();
        };

        window.showSignup = function() {
            document.getElementById('login-form').classList.add('hidden');
            document.getElementById('signup-form').classList.remove('hidden');
            clearAlerts();
        };

        window.showDashboard = function() {
            showContent('dashboard');
            setActiveNav('dashboard');
            document.getElementById('pageTitle').textContent = 'ëŒ€ì‹œë³´ë“œ';
            document.getElementById('pageSubtitle').textContent = 'ì‹¤ì  í˜„í™©ì„ í™•ì¸í•˜ê³  í”¼ë“œë°±ì„ ìš”ì²­í•˜ì„¸ìš”';
        };

        window.showPerformance = function() {
            showContent('dashboard'); // í˜„ì¬ëŠ” ê°™ì€ ë‚´ìš©
            setActiveNav('performance');
            document.getElementById('pageTitle').textContent = 'ì‹¤ì  ê´€ë¦¬';
            document.getElementById('pageSubtitle').textContent = 'ì›”ë³„ ì‹¤ì ì„ ê´€ë¦¬í•˜ê³  í”¼ë“œë°±ì„ ë°›ìœ¼ì„¸ìš”';
        };

        function showAuthSection() {
            document.getElementById('auth-section').classList.add('active');
            document.getElementById('dashboard-section').classList.remove('active');
        }

        function showDashboardSection() {
            document.getElementById('auth-section').classList.remove('active');
            document.getElementById('dashboard-section').classList.add('active');
        }

        function showContent(contentType) {
            document.getElementById('dashboard-content').classList.toggle('hidden', contentType !== 'dashboard');
            document.getElementById('admin-content').classList.toggle('hidden', contentType !== 'admin');
            
            if (contentType === 'admin') {
                document.getElementById('pageTitle').textContent = 'ê´€ë¦¬ì í˜ì´ì§€';
                document.getElementById('pageSubtitle').textContent = 'ì „ì²´ ì§ì›ì˜ ì‹¤ì  í˜„í™©ì„ ê´€ë¦¬í•˜ì„¸ìš”';
                setActiveNav('admin');
            }
        }

        function setActiveNav(activeItem) {
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            
            const navMap = {
                'dashboard': 0,
                'performance': 1,
                'admin': 2
            };
            
            const links = document.querySelectorAll('.nav-link');
            if (links[navMap[activeItem]]) {
                links[navMap[activeItem]].classList.add('active');
            }
        }

        // ì•Œë¦¼ ë©”ì‹œì§€ í‘œì‹œ
        function showAlert(elementId, message) {
            clearAlerts();
            const element = document.getElementById(elementId);
            element.textContent = message;
            element.style.display = 'block';
        }

        function clearAlerts() {
            document.querySelectorAll('.alert').forEach(el => {
                el.style.display = 'none';
            });
        }

